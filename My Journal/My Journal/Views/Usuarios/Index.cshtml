 @model IEnumerable<My_Journal.Models.Usuario.Usuario>


@{
    ViewData["Title"] = "Usuarios";
}
<link href="/theme-assets/css/index_style.css" rel="stylesheet" />


<style>

    /* Opcional: Personalización de modal */
    .modal-content {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    #modalEditarUsuario .modal-dialog {
        max-width: 75%; /* Ajusta este valor a lo que quieras */
        width: 100%;
        margin-right: 20%;
    }

    .modal-header {
        border-bottom: none;
        padding: 20px;
    }

    .modal-title {
        font-weight: bold;
        color: #343a40;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        border-top: none;
        padding: 20px;
    }
    /* Para modal de alerta */
    .modal-alert .modal-header {
        background-color: #ffeeba; /* Amarillo para alerta */
        color: #856404;
    }
    /* Para modal de éxito */
    .modal-success .modal-header {
        background-color: #d4edda; /* Verde para éxito */
        color: #155724;
    }
</style>

<a href="/UsuariosCreate" title="" class="btn btn btn-lg box-shadow--4dp">Crear Registro</a>
<br />
<div class="container" style="margin-top:30px;">
    <div class="form-group row">

        <div class="form-group col-lg-2">
            <input type="hidden" id="startDate" name="startDate" class="form-control" />
        </div>
        <div class="form-group col-lg-2">
            <input type="hidden" id="endDate" name="endDate" class="form-control" />
        </div>
    </div>
</div>
<div class="container" style="margin-top:10px;">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th>Usuario</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>

                    <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <a class="btn launch" data-toggle="modal" data-target="#modalEditarUsuario"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        <a class="btn launch" data-toggle="modal" data-target="#staticBackdrop"> <i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>

                </tr>
                <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body ">
                                <div class="text-right"> <i class="fa fa-close close" data-dismiss="modal"></i> </div>

                                <div class="px-4 py-5">

                                    <h5 class="text-uppercase">Usuario1</h5>



                                    <h4 class="mt-5 theme-color mb-5">Estás a punto de eliminar un elemento!</h4>

                                    <span class="theme-color">Record Summary</span>
                                    <div class="mb-3">
                                        <hr class="new1">
                                    </div>

                                    <div class="d-flex justify-content-between">
                                        <small>Nombres</small>
                                        <small>@Html.DisplayFor(modelItem => item.Nombres)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Apellidos</small>
                                        <small>@Html.DisplayFor(modelItem => item.Apellidos)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Telefono</small>
                                        <small>@Html.DisplayFor(modelItem => item.Telefono)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Direccion</small>
                                        <small>@Html.DisplayFor(modelItem => item.Direccion)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Usuario</small>
                                        <small>@Html.DisplayFor(modelItem => item.Usuario1)</small>
                                    </div>


                                    <div class="form-group">
                                        <button class="btn btn-danger">

                                            <a style="color:white;" asp-action="Delete" asp asp-route-id="@item.IdUsuario">Sí, quiero eliminar</a>
                                        </button>
                                        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>

                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" style="max-width: 750px; width: 90vw;">
                        <div class="modal-content">
                            <form asp-action="Edit" method="post" class="form" id="formEditarUsuario">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalEditarUsuarioLabel">Editar Usuario</h5>
                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <div class="modal-body">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" />

                                    <div class="form-group row">
                                        <div class="col-lg-5 mb-3">
                                            <label class="control-label">Nombres</label>
                                            <input value=@Html.DisplayFor(modelItem => item.Nombres) class="form-control" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-5 mb-3">
                                            <label class="control-label">Apellidos:</label>
                                            <input value=@Html.DisplayFor(modelItem => item.Apellidos) type="text" class="form-control" placeholder="Enter last name" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            <label class="control-label">Dirección:</label>
                                            <div class="input-group">
                                                <input value=@Html.DisplayFor(modelItem => item.Direccion) type="text" class="form-control" placeholder="Enter your address" />
                                                <div class="input-group-append"><span class="input-group-text"><i class="la la-map-marker"></i></span></div>
                                            </div>
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-5 mb-3">
                                            <label class="control-label">Teléfono:</label>
                                            <div class="input-group">
                                                <input value=@Html.DisplayFor(modelItem => item.Telefono) type="tel" class="form-control" placeholder="Provide a contact number" />
                                                <div class="input-group-append"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                            </div>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-lg-4 mb-3">
                                            <label class="control-label">Usuario:</label>
                                            <div class="input-group">
                                                <input value=@Html.DisplayFor(modelItem => item.Usuario1) type="text" class="form-control" placeholder="Create a new user" />
                                                <div class="input-group-append"><span class="input-group-text"><i class="la la-user"></i></span></div>
                                            </div>
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-4 mb-3">
                                            <label class="control-label">Contraseña:</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Create a new password" />
                                                <div class="input-group-append"><span class="input-group-text"><i class="la la-key"></i></span></div>
                                            </div>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <label class="control-label">Estado</label>
                                    <div class="form-group form-check mb-3">
                                        <div class="col-sm-3">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="checkbox" @(item.Estado ? "checked" : "") /> Activo
                                        </div>
                                    </div>

                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                                    <button type="submit" class="btn btn-success">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            }
        </tbody>

    </table>

</div>
<br />



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/theme-assets/js/Datatable.js"></script>
}
       
