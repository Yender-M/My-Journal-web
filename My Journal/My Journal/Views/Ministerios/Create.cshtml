<style>
    
.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
    border-radius: 34px;
}

.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: .4s;
    border-radius: 50%;
}

input:checked + .slider {
/*     background-color: #2196F3;
 */
background-color:#2B345F;}

input:checked + .slider:before {
    transform: translateX(26px);
}
</style>

<div class="card-body">
    <div class="form-group row">
        <h5 class="card-title"><span class="circle_bg_text">1</span> Agregar registro</h5>
        <div class="col-lg-4">

            <label>Ministerio</label>
            <input asp-for="Ministerios.Nombre" type="text" class="form-control" placeholder="Ej. Ministerio Femenil" id="ministerio" />
            <span class="form-text text-muted"></span>
        </div>
        <div class="col-lg-4">
            <label>Descripción</label>
            <input asp-for="Ministerios.Descripcion" type="text" class="form-control" placeholder="Ej. Ministerio para mujeres" id="descripcion" />
            <span class="form-text text-muted"></span>
        </div>

            <div class="form-group row">
        <h5 class="card-title"><span class="circle_bg_text">2</span> Agregar Usuario</h5>
