@model IEnumerable<My_Journal.Models.Pagos.PagosViewModel>

@{
    ViewData["Title"] = "Pagos";
}

<link href="/theme-assets/css/index_style.css" rel="stylesheet" />

<a asp-controller="PagoesCreate" asp-action="Index" title="" class="btn btn-lg btn-primary box-shadow--4dp">Crear registro</a>

<div class="container" style="margin-top: 30px;">
    <form id="filterForm" asp-controller="Pagoes" asp-action="Index" method="get">
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="startDate">Desde</label>
                    <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="endDate">Hasta</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary form-control box-shadow--4dp white-text-button">Filtrar</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Categoría</th>
            <th>@Html.DisplayNameFor(model => model.Pagos.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Pagos.Cantidad)</th>
            <th>Divisa</th>
            <th>Tasa de Cambio</th>
            <th>Fecha Pago</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var rowClass = item.Pagos.Estado == 0 ? "anulado" : "";
            <tr class="@rowClass">
                <td>@Html.DisplayFor(modelItem => item.PagosCategoria.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Pagos.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Pagos.Cantidad)</td>
                <td>@Html.DisplayFor(modelItem => item.Divisa.CodDivisa)</td>
                <td>@Html.DisplayFor(modelItem => item.Pagos.TasaCambio)</td>
                <td>@item.Pagos.FechaPago.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.Pagos.Estado == 0)
                    {
                        <span>Anulado</span>
                    }
                    else
                    {
                        <a class="btn launch btnEditarPago"
                           data-toggle="modal"
                           data-target="#modalEditarPago"
                           data-id="@item.Pagos.IdPago"
                           data-categoria="@item.PagosCategoria.Nombre"
                           data-descripcion="@item.Pagos.Descripcion"
                           data-cantidad="@item.Pagos.Cantidad"
                           data-divisa="@item.Divisa.CodDivisa"
                           data-tasacambio="@item.Pagos.TasaCambio"
                           data-fechapago="@item.Pagos.FechaPago.ToString("yyyy-MM-dd")"
                           data-estado="@item.Pagos.Estado">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>
                        <a class="btn launch" data-toggle="modal" data-target="#staticBackdrop-@item.Pagos.IdPago">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    }
                </td>
            </tr>

            @if (item.Pagos.Estado != 0)
            {
                <div class="modal fade" id="staticBackdrop-@item.Pagos.IdPago" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="text-right">
                                    <i class="fa fa-close close" data-dismiss="modal"></i>
                                </div>
                                <div class="px-2 py-3">
                                    <h4 class="mt-5 theme-color mb-5">Estás a punto de Anular este Pago!</h4>
                                    <span class="theme-color">Resumen</span>
                                    <div class="mb-3">
                                        <hr class="new1" />
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Categoría</small>
                                        <small>@Html.DisplayFor(modelItem => item.PagosCategoria.Nombre)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Descripción</small>
                                        <small>@Html.DisplayFor(modelItem => item.Pagos.Descripcion)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Cantidad</small>
                                        <small>@Html.DisplayFor(modelItem => item.Pagos.Cantidad)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Divisa</small>
                                        <small>@Html.DisplayFor(modelItem => item.Divisa.CodDivisa)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Tasa Cambio</small>
                                        <small>@Html.DisplayFor(modelItem => item.Pagos.TasaCambio)</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Fecha</small>
                                        <small>@item.Pagos.FechaPago.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-danger">
                                            <a style="color:white;" asp-action="Anular" asp-route-id="@item.Pagos.IdPago">Sí, quiero Anular</a>
                                        </button>
                                        <button class="btn btn-secondary" data-dismiss="modal">
                                            Cancelar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </tbody>
</table>

<!-- MODAL DE EDICIÓN PARA PAGOS -->
<div class="modal fade" id="modalEditarPago" tabindex="-1" aria-labelledby="modalPagoLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 600px; width: 90vw;">
        <div class="modal-content">
            <form asp-action="Edit" method="post" id="formEditarPago" class="form">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Pago - <span id="modalPagoCategoria"></span></h5>
                    <button type="button" class="btn-close" data-dismiss="modal"></button>
                </div>
                <div class="modal-body">

                    <input type="hidden" id="EditIdPago" name="IdPago" />

                    <div class="form-group">
                        <label>Categoría</label>
                        <input type="text" id="EditCategoriaPago" class="form-control" disabled />
                    </div>

                    <div class="form-group mt-3">
                        <label>Descripción</label>
                        <input type="text" id="EditDescripcionPago" name="Descripcion" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <label>Cantidad</label>
                        <input type="number" step="0.01" id="EditCantidadPago" name="Cantidad" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <label>Divisa</label>
                        <input type="text" id="EditDivisaPago" class="form-control" disabled />
                    </div>

                    <div class="form-group mt-3">
                        <label>Tasa de Cambio</label>
                        <input type="number" step="0.0001" id="EditTasaCambioPago" name="TasaCambio" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <label>Fecha de Pago</label>
                        <input type="date" id="EditFechaPago" name="FechaPago" class="form-control" />
                    </div>

                    <!-- TOGGLE DE ESTADO PARA PAGOS -->
                    <label class="label mt-3">
                        <div class="toggle">
                            <input class="toggle-state" id="estadoCheckPago" name="Estado" type="checkbox" />
                            <div class="indicator"></div>
                        </div>
                        <div class="label-text" id="estadoLabelPago">No activo</div>
                    </label>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/theme-assets/js/Datatable.js"></script>

    <script>
        $(document).ready(function () {
            // Cargar las fechas de la sesión
            var startDate = '@ViewBag.StartDate';
            var endDate = '@ViewBag.EndDate';

            $('#startDate').val(startDate);
            $('#endDate').val(endDate);

            // Inicializar DataTable
            $('#example').DataTable();

            // Variables para toggle de estado
            const estadoCheck = document.getElementById("estadoCheckPago");
            const estadoLabel = document.getElementById("estadoLabelPago");
            const toggleContainer = document.querySelector('#modalEditarPago .toggle');

            // Abrir modal y llenar campos
            $(document).on('click', '.btnEditarPago', function () {
                var btn = $(this);

                $("#EditIdPago").val(btn.data("id"));
                $("#EditCategoriaPago").val(btn.data("categoria"));
                $("#modalPagoCategoria").text(btn.data("categoria"));
                $("#EditDescripcionPago").val(btn.data("descripcion"));
                $("#EditCantidadPago").val(btn.data("cantidad"));
                $("#EditDivisaPago").val(btn.data("divisa"));
                $("#EditTasaCambioPago").val(btn.data("tasacambio"));
                $("#EditFechaPago").val(btn.data("fechapago"));

                var estado = btn.data("estado");
                const isActive = estado === true || estado === "True" || estado === "true" || estado == 1;

                $("#estadoCheckPago").prop("checked", isActive);

                if (isActive) {
                    estadoLabel.textContent = "Activo";
                    estadoLabel.style.color = "#006400"; // Verde
                    toggleContainer.style.backgroundColor = "#00640033"; // Fondo verde claro
                } else {
                    estadoLabel.textContent = "No activo";
                    estadoLabel.style.color = "#394a56"; // Gris estándar
                    toggleContainer.style.backgroundColor = "#ecf0f3"; // Fondo estándar
                }
            });

            // Cambiar texto y color cuando cambia el toggle
            estadoCheck.addEventListener("change", function () {
                if (estadoCheck.checked) {
                    estadoLabel.textContent = "Activo";
                    estadoLabel.style.color = "#006400"; // Verde
                    toggleContainer.style.backgroundColor = "#00640033"; // Fondo verde claro
                } else {
                    estadoLabel.textContent = "No activo";
                    estadoLabel.style.color = "#394a56"; // Gris estándar
                    toggleContainer.style.backgroundColor = "#ecf0f3"; // Fondo estándar
                }
            });
        });
    </script>
}
