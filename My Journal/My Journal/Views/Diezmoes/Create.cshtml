<br />

    <div class="card-body">
        <div class="form-group row">
            <h5 class="card-title"><span class="circle_bg_text">1</span>   Agregar registro</h5>

            <div class="col-lg-5">
                <label>Descripción</label>
                <input asp-for="Descripcion" type="text" class="form-control" placeholder="Ej.  Diezmo culto dominical" />
                <span class="form-text text-muted"></span>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="col-lg-5">
                <label>Cantidad</label>
                <input asp-for="Cantidad" type="number" step="0.01" min="1" class="form-control" placeholder="Ingrese una cantidad..." />
                <span class="form-text text-muted"></span>
            </div>
            </div>
         <div class="form-group row">

            <div class="col-lg-3">
                <label>Fecha</label>
                <div class="input-group">
                    <input asp-for="FechaDiezmo" type="datetime-local" class="form-control" />
                </div>
                <span class="form-text text-muted"></span>
            </div>
            <div class="col-lg-3">
                <button id="agregarbtn" type="submit" class="btn btn-success mr-2">Agregar</button>
            </div>
            
          
                
            </div>
<br />
        <form class="form" asp-action="Create">
        <div class="form-group row">
            <h5 class="card-title"><span class="circle_bg_text">2</span>   Listado de Diezmos</h5>

            <table id="example" class="table table-striped table-bordered" style="width:100%">

                <thead>
                    <tr>

                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
