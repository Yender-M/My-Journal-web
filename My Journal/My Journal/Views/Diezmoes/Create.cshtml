                            <td>

                                <a class="btn launch" > <i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>

@*                     }
 *@                </tbody>

            </table>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" value="Create" class="btn btn-success mr-2">Agregar</button>
                        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
        $('#example').DataTable({
            // Atributo para hacer la tabla responsive
            responsive: true,
            // Agregar scroll a la tabla para que quepa en el contenedor
            "sScrollX": "100%",
            "sScrollXInner": "110%",
            "bScrollCollapse": true
        });
</script>