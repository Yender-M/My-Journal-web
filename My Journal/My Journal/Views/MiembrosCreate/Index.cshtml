@model My_Journal.Models.Miembros.Miembro

@{
    ViewData["Title"] = "Crear Miembros";
}

<link href="/theme-assets/css/create_style.css" rel="stylesheet" />



<br />

<div class="card-body">
    <div class="form-group row">
        <h5 class="card-title"><span class="circle_bg_text">1</span> Agregar registro</h5>

        <div class="col-lg-5">
            <label>Nombres</label>
            <input asp-for="Nombre" type="text" class="form-control" placeholder="Ej. Cinthia Carolina" id="nombres" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-lg-5">
            <label>Apellidos</label>
            <input asp-for="Apellido" type="text" class="form-control" placeholder="Ej. Duarte Ruiz" id="apellidos" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="col-lg-5">
            <label>Direccion</label>
            <input asp-for="Direccion" type="text" class="form-control" placeholder="Ej. Managua" id="direccion" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="col-lg-5">
            <label>Telefono</label>
            <input asp-for="Telefono" type="text" class="form-control" placeholder="Ej. 12345678" id="telefono" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4">
            <label>Fecha de Nacimiento</label>
            @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @type = "date", @Value = DateTime.Now.ToString("dd/MM/yyyy"), @id = "fechanacimiento" } })
        </div>
        <div class="form-group col-lg-4">
            <label>Fecha de Bautismo</label>
            @Html.EditorFor(model => model.FechaBautismo, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @type = "date", @Value = DateTime.Now.ToString("dd/MM/yyyy"), @id = "fechabautismo" } })
        </div>
        <div class="col-lg-3">
            <button id="agregarbtn" type="button" class="btn btn-success mr-2" onclick="agregarRegistro()">Agregar</button>
        </div>
    </div>
    <br />
    <form class="form" asp-action="Create" method="post">
        <div class="form-group row">
            <h5 class="card-title"><span class="circle_bg_text">2</span> Listado de Miembros</h5>

            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Fecha de Bautismo</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se añadirán las filas dinámicamente -->
                </tbody>
            </table>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" value="Create" class="btn btn-success mr-2">Guardar</button>
                        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    <script src="/theme-assets/createdatablemiembro.js"></script>
    }

</div>
