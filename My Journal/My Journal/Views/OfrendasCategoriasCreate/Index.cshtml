@model My_Journal.Models.OfrendaCategoria.OfrendasCategoria
@{
    ViewData["Title"] = "Crear Ofrendas Categorias";
}


<link href="/theme-assets/css/create_style.css" rel="stylesheet" />

<!-- Agregar referencias a DataTables -->


<br />

<div class="card-body">
    <div class="form-group row">
        <h5 class="card-title"><span class="circle_bg_text">1</span> Agregar registro</h5>

        <div class="col-lg-5">
            <label>Nombres</label>
            <input asp-for="Nombre" type="text" class="form-control" placeholder="Ej. Culto de Oracion" id="nombres" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-lg-5">
            <label>Descripcion</label>
            <input asp-for="Descripcion" type="text" class="form-control" placeholder="Ej. Reunion de los dias viernes para orar" id="descripcion" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="col-lg-3">
            <button id="agregarbtn" type="button" class="btn btn-success mr-2" onclick="agregarRegistro()">Agregar</button>
        </div>
    </div>
    <br />
    <form class="form" asp-action="Index" method="post">
        <div class="form-group row">
            <h5 class="card-title"><span class="circle_bg_text">2</span> Listado de Ofrendas Categorias</h5>

            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Descripcion</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se añadirán las filas dinámicamente -->
                </tbody>
            </table>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit"  class="btn btn-success mr-2">Guardar</button>
                        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script src="/theme-assets/createdatableofrendacat.js"></script>

    }



</div>