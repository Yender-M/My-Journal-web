@model My_Journal.Models.Ofrenda.OfrendaViewModel

@{
    ViewData["Title"] = "Crear Ofrenda";
}

<link href="/theme-assets/css/create_style.css" rel="stylesheet" />


<br />

<div class="card-body">
    <div class="form-group row">
        <h5 class="card-title"><span class="circle_bg_text">1</span> Agregar registro</h5>

        <div class="form-group col-lg-4" style="overflow:visible">
            @Html.LabelFor(model => model.OfrendaCategoria.IdCatOfrenda, "Categoría", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.OfrendaCategoria.IdCatOfrenda, (SelectList)ViewBag.ListadoOfrendasCategorias, "Seleccione una categoría", htmlAttributes: new { @class = "form-control", @id = "categoria" })
        </div>
        <div class="col-lg-5">
            <label>Descripción</label>
            <input asp-for="Ofrenda.Descripcion" type="text" class="form-control" placeholder="Ej. Ofrenda del culto dominical" id="descripcion" />
            <span class="form-text text-muted"></span>
            <span asp-validation-for="@Model.Ofrenda.Descripcion" class="text-danger"></span>
        </div>
        <div class="col-lg-3">
            <label>Cantidad</label>
            <input asp-for="Ofrenda.Cantidad" type="number" step="0.01" min="1" class="form-control" placeholder="Ingrese algo..." id="cantidad" />
            <span class="form-text text-muted"></span>
        </div>
        <div class="form-group col-lg-4" style="overflow:visible">
            @Html.LabelFor(model => model.Divisa.IdDivisa, "Divisa", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.Divisa.IdDivisa, (SelectList)ViewBag.ListadoDivisa, "Seleccione la Divisa", htmlAttributes: new { @class = "form-control", @id = "divisa" })
        </div>
        <div class="col-lg-3">
            <label>Tasa de Cambio</label>
            <input asp-for="Ofrenda.TasaCambio" type="number" step="0.01" min="1" class="form-control" placeholder="Ingrese algo..." id="tasaCambio" />
            <span class="form-text text-muted"></span>
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Ofrenda.Fecha, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Ofrenda.Fecha, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @type = "date", @Value = DateTime.Now.ToString("dd/MM/yyyy"), @id = "fecha" } })
        </div>
        <div class="col-lg-3">
            <button id="agregarbtn" type="button" class="btn btn-success mr-2" onclick="agregarRegistro()">Agregar</button>
        </div>
    </div>
    <br />
    <form class="form" asp-action="Create" method="post">
        <div class="form-group row">
            <h5 class="card-title"><span class="circle_bg_text">2</span> Listado de Ofrendas</h5>

            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Categoría</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Divisa</th>
                        <th>Tasa de Cambio</th>
                        <th>Fecha</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se añadirán las filas dinámicamente -->
                </tbody>
            </table>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-success mr-2">Guardar</button>
                        <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
<script src="/theme-assets/createdatable.js"></script>
    }

</div>
