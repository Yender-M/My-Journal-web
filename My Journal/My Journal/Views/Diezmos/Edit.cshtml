@model My_Journal.Models.Diezmos.DiezmoViewModel

@{
    ViewData["Title"] = "Editar Diezmo";
}

<!-- Enlaces CSS -->
<link href="/theme-assets/css/app-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap-extended.css" rel="stylesheet" />
<link href="/theme-assets/css/colors.css" rel="stylesheet" />
<link href="/theme-assets/css/components-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/core/colors/palette-gradient.css" rel="stylesheet" />
<link href="/theme-assets/css/pages/dashboard-ecommerce.css" rel="stylesheet" />
<link href="/theme-assets/css/core/menu/menu-types/vertical-menu.css" rel="stylesheet" />
<link rel="apple-touch-icon" href="theme-assets/images/ico/apple-icon-120.png">
<link rel="shortcut icon" type="image/x-icon" href="theme-assets/images/ico/favicon.ico">
<link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i%7CComfortaa:300,400,700" rel="stylesheet">
<link href="https://maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/60f66db414.js" crossorigin="anonymous"></script>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    .btn-primary {
        background: #2a8358;
    }

    label {
        font-weight: 500;
    }
</style>

<!-- Formulario de Edición -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <form class="form" asp-action="Editar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Diezmo.IdDiezmo" />

                <div class="form-group row">
                    <div class="form-group col-lg-3" style="overflow:visible">
                        @Html.LabelFor(model => model.Miembro.IdMiembro, "Miembro", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Miembro.IdMiembro, (SelectList)ViewBag.ListadoMiembro, "Seleccione una Miembro", htmlAttributes: new { @class = "form-control", @id = "miembro" })
                    </div>

                    <div class="col-lg-4">
                        <label class="control-label">Alias</label>
                        <input asp-for="Diezmo.Alias" class="form-control" />
                        <span asp-validation-for="Diezmo.Alias" class="text-danger"></span>
                    </div>

                    <div class="col-lg-5">
                        <label class="control-label">Descripción</label>
                        <input asp-for="Diezmo.Descripcion" class="form-control" />
                        <span asp-validation-for="Diezmo.Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label>Cantidad</label>
                        <input asp-for="Diezmo.Cantidad" type="number" step="0.0000001" min="1" class="form-control" placeholder="Ingrese algo..." id="cantidad" />
                        <span class="form-text text-muted"></span>
                    </div>

                    <div class="form-group col-lg-2" style="overflow:visible">
                        @Html.LabelFor(model => model.Divisa.IdDivisa, "Divisa", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Divisa.IdDivisa, (SelectList)ViewBag.ListadoDivisa, "Seleccione la Divisa", htmlAttributes: new { @class = "form-control", @id = "divisa" })
                    </div>

                    <div class="col-lg-3">
                        <label>Tasa de Cambio</label>
                        <input asp-for="Diezmo.TasaCambio" type="number" step="0.0000001" min="1" class="form-control" placeholder="Ingrese algo..." id="tasaCambio" />
                        <span class="form-text text-muted"></span>
                    </div>

                    <div class="col-lg-3">
                        <label>Fecha</label>
                        <div class="input-group">
                            <input asp-for="Diezmo.FechaDiezmo" type="date" class="form-control" />
                        </div>
                        <span class="form-text text-muted"></span>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn  btn-primary box-shadow--4dp" />
                    <button asp-action="Index" class="btn btn-secondary">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
