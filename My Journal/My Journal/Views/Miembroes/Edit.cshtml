@model My_Journal.Miembro

@{
    ViewData["Title"] = "Edit Member";
}

<link href="/theme-assets/css/app-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap-extended.css" rel="stylesheet" />
<link href="/theme-assets/css/colors.css" rel="stylesheet" />
<link href="/theme-assets/css/components-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/core/colors/palette-gradient.css" rel="stylesheet" />
<link href="/theme-assets/css/pages/dashboard-ecommerce.css" rel="stylesheet" />
<link href="/theme-assets/css/core/menu/menu-types/vertical-menu.css" rel="stylesheet" />
<link rel="apple-touch-icon" href="theme-assets/images/ico/apple-icon-120.png">
<link rel="shortcut icon" type="image/x-icon" href="theme-assets/images/ico/favicon.ico">
<link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i%7CComfortaa:300,400,700" rel="stylesheet">
<link href="https://maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/60f66db414.js" crossorigin="anonymous"></script>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>



<form class="form" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMiembro" />
    <div class="form-group row">
        <div class="col-lg-5">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-lg-5">
            <label>Apellidos:</label>
            <input asp-for="Apellido" type="text" class="form-control" placeholder="Enter last name" />
            <span class="form-text text-muted"></span>
        </div>
        <div class="col-lg-6">
            <label>Dirección:</label>
            <div class="input-group">
                <input asp-for="Direccion" type="text" class="form-control" placeholder="Enter your address" />
                <div class="input-group-append"><span class="input-group-text"><i class="la la-map-marker"></i></span></div>
            </div>
            <span class="form-text text-muted"></span>
        </div>
        <div class="col-lg-5">
            <label>Teléfono:</label>
            <div class="input-group">
                <input asp-for="Telefono" type="tel" class="form-control" placeholder="Provide a contact number" />
                <div class="input-group-append"><span class="input-group-text"><i class="la la-phone"></i></span></div>
            </div>
            <span class="form-text text-muted"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">
            <label>Fecha de Nacimiento:</label>
            <div class="input-group">
                <input asp-for="FechaNacimiento" type="datetime-local" class="form-control" />
                <div class="input-group-append"><span class="input-group-text"><i class="la la-birthday-cake"></i></span></div>
            </div>
            <span class="form-text text-muted"></span>
        </div>
        <div class="col-lg-4">
            <label>Fecha de Bautismo:</label>
            <div class="input-group">
                <input asp-for="FechaBautismo" type="datetime-local" class="form-control" placeholder="Create a new password" />
                <div class="input-group-append"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
            </div>
            <span class="form-text text-muted"></span>
        </div>
    </div>
    <label>Estado</label>
    <div class="form-group form-check">
        <div class="col-sm-3">

            <label class="form-check-label">
                <input class="form-check-input" asp-for="Estado" />Activo
            </label>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <button asp-action="Index" class="btn btn-secondary">Cancel</button>

    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

