@model My_Journal.Models.Pagos.PagosViewModel;

@{
    ViewData["Title"] = "Crear Pago Básico";
}

<link href="/theme-assets/css/app-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap.css" rel="stylesheet" />
<link href="/theme-assets/css/bootstrap-extended.css" rel="stylesheet" />
<link href="/theme-assets/css/colors.css" rel="stylesheet" />
<link href="/theme-assets/css/components-lite.css" rel="stylesheet" />
<link href="/theme-assets/css/core/colors/palette-gradient.css" rel="stylesheet" />
<link href="/theme-assets/css/pages/dashboard-ecommerce.css" rel="stylesheet" />
<link href="/theme-assets/css/core/menu/menu-types/vertical-menu.css" rel="stylesheet" />
<link rel="apple-touch-icon" href="theme-assets/images/ico/apple-icon-120.png">
<link rel="shortcut icon" type="image/x-icon" href="theme-assets/images/ico/favicon.ico">
<link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i%7CComfortaa:300,400,700" rel="stylesheet">
<link href="https://maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/60f66db414.js" crossorigin="anonymous"></script>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<link href="/theme-assets/css/create_style.css" rel="stylesheet" />

<form asp-action="Crear" method="post" class="form">
    <div class="card-body">
        <div class="form-group row">
            <div class="form-group col-lg-4" style="overflow:visible">
                @Html.LabelFor(model => model.PagosCategoria.IdCategoria, "Categoría", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.PagosCategoria.IdCategoria, (SelectList)ViewBag.ListadoPagosCategorias, "Seleccione una categoría", htmlAttributes: new { @class = "form-control", @id = "categoria" })
            </div>
            <div class="col-lg-5">
                @Html.LabelFor(model => model.Pagos.Descripcion, "Descripción")
                @Html.TextBoxFor(model => model.Pagos.Descripcion, new { @class = "form-control", placeholder = "Ingrese una descripción" })
            </div>
            <div class="col-lg-3">
                @Html.LabelFor(model => model.PagosDetalle.Cantidad, "Cantidad")
                @Html.TextBoxFor(model => model.PagosDetalle.Cantidad, new { @class = "form-control", placeholder = "Ingrese una cantidad...", type = "number", step = "0.01", min = "1" })
            </div>
            <div class="form-group col-lg-4" style="overflow:visible">
                @Html.LabelFor(model => model.Divisa.IdDivisa, "Divisa", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Divisa.IdDivisa, (SelectList)ViewBag.ListadoDivisa, "Seleccione la Divisa", htmlAttributes: new { @class = "form-control", @id = "divisa" })
            </div>
            <div class="col-lg-3">
                @Html.LabelFor(model => model.PagosDetalle.TasaCambio, "Tasa de Cambio")
                @Html.TextBoxFor(model => model.PagosDetalle.TasaCambio, new { @class = "form-control", placeholder = "Ingrese algo...", type = "number", step = "0.01", min = "1" })
            </div>
            <div class="col-lg-6">
                @Html.LabelFor(model => model.Pagos.Fecha, "Fecha")
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Pagos.Fecha, new { @class = "form-control", type = "datetime-local" })
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-success mr-2">Crear</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
